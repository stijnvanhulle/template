{
  "name": "template",
  "version": "2.0.0",
  "private": true,
  "description": "Monorepo template",
  "repository": {
    "type": "git",
    "url": "git://github.com/stijnvanhulle/template.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "scripts": {
    "build": "nx run-many --all --target=build",
    "build:affected": "nx affected --target=build",
    "graph": "nx graph ",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --quiet --fix",
    "pre-commit": "nx affected --target=pre-commit && pnpm run lint-fix",
    "pre-push": "nx affected --target=pre-push",
    "release": "nx run-many --all --target=release --parallel=1",
    "release:affected": "nx affected --target=release --parallel=1",
    "test": "jest --runInBand --passWithNoTests",
    "test:local": "jest --maxWorkers=50%",
    "test:watch": "jest --maxWorkers=25% --watch",
    "typecheck": "nx run-many --all --target=typecheck",
    "typecheck:affected": "nx affected --target=typecheck",
    "upgrade": "ncu -u && ncu -u --packageFile **/packages/**/package.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@swc/core": "^1.3.8",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.9",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "jest-cli": "^29.2.0",
    "jest-environment-jsdom": "^29.2.2",
    "npm-check-updates": "^16.3.16",
    "nx": "^15.0.10",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-formatjs": "^4.3.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0"
  },
  "engines": {
    "node": ">=14.18"
  }
}
