{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@stijnvanhulle/ts-config/base.json",
  "compilerOptions": {
    "types": [
      "vitest/globals",
      "bun-types",
      "@stijnvanhulle/ts-config/reset"
    ],
    "paths": {
      "@stijnvanhulle/template-core": [
        "../core/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./mocks/*",
    "./package.json",
    "./tsup.config.ts",
    "./vitest.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**"
  ]
}